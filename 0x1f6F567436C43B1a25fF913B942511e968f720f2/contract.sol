contract TESTOlympusBankV2 is ReentrancyGuard  {
    OlympusBankV1 contractV1;
    address addrContractV1;
    IBEP20 token;
    address tokenaddress;
   
    struct Investor {
        
        uint256 referrals;
        uint256 payment;
        uint256 direct_bonus;
        address upliner;
        uint256 deposit_amount;
        uint256 deposit_payouts;
        uint40  deposit_time;
        uint256 total_deposits;
        uint256 total_payment;
        uint256 total_structure;
        uint256 cycle;
    }

    address public owner;
    address public master_fee;

    mapping(address => Investor) public users;

    uint256[] public cycles;

    uint256 public total_investors = 1;
    uint256 public total_deposited;
    uint256 public total_withdraw;
    uint256[] public REFERRAL_PERCENTS = [50, 30, 20];      
    uint256 constant public PERCENTS_DIVIDER = 1000;
    event Upliner(address indexed addr, address indexed upliner);
    event MatchPayment(address indexed addr, address indexed from, uint256 amount);
    event AssociatePaymet(address indexed addr, uint256 amount);
    event Withdraw(address indexed addr, uint256 amount);
    event RecentDeposit(address indexed addr, uint256 amount);
    event LimitReached(address indexed addr, uint256 amount);
    event RefBonus(address indexed referrer, address indexed referral, uint256 indexed level, uint256 amount);
     constructor(address  _owner, address _tokenaddress, address _master_fee, address _contractBankv1) {
        owner = _owner;
        cycles.push(25*1e12);
        cycles.push(50*1e12);
        cycles.push(100*1e12);
        cycles.push(250*1e12);
        cycles.push(1000*1e12);
        master_fee = _master_fee;
        tokenaddress = _tokenaddress;
        token = IBEP20(_tokenaddress);
        addrContractV1=_contractBankv1;
        contractV1 = OlympusBankV1(_contractBankv1);
        
    }

    function _setUpliner(address _addr, address _upline) private {
        if(users[_addr].upliner == address(0) && _upline != _addr && _addr != owner && (users[_upline].deposit_time > 0 || _upline == owner)) {
            users[_addr].upliner = _upline;
            users[_upline].referrals++;

            emit Upliner(_addr, _upline);

            total_investors++;
        }
    }

    function _deposit(address _addr, uint256 _amount) private {
        require(users[_addr].upliner != address(0) || _addr == owner, "No upliner");

        if(users[_addr].deposit_time > 0) {
            users[_addr].cycle++;
            require(users[_addr].payment >= this.maxPayoutOf(users[_addr].deposit_amount), "Deposit already exists");
            require(_amount >= users[_addr].deposit_amount && _amount <= cycles[users[_addr].cycle > cycles.length - 1 ? cycles.length - 1 : users[_addr].cycle], "Bad amount");
        }
        else require(_amount >= 250*1e9 && _amount <= cycles[0], "Bad amount");
        users[_addr].payment = 0;
        users[_addr].deposit_amount = _amount;
        users[_addr].deposit_payouts = 0;
        users[_addr].deposit_time = uint40(block.timestamp);
        users[_addr].total_deposits += _amount;
        total_deposited += _amount;
        emit RecentDeposit(_addr, _amount);

        if (users[_addr].upliner != address(0)) {

			address upline = users[_addr].upliner;
			for (uint256 i = 0; i < 3; i++) {
				if (upline != address(0)) {
					uint256 amount = _amount*(REFERRAL_PERCENTS[i])/(PERCENTS_DIVIDER);
					users[upline].direct_bonus += amount;
					emit RefBonus(upline, msg.sender, i, amount);
					upline = users[upline].upliner;
				} else break;
			}

		}
        token.transfer(master_fee,  _amount * 5 / 100);
        
    }

    function deposit(address _upline, uint256 _amount) external nonReentrant {
        uint256 balanceA = token.balanceOf(msg.sender);
        require(_amount <= balanceA, "insufficient balance");
        TransferHelper.safeTransferFrom(address(token),msg.sender,address(this),_amount);
        _setUpliner(msg.sender, _upline);
        _deposit(msg.sender, _amount);
    }

    function withdraw() external nonReentrant{
        (uint256 to_payout, uint256 max_payout) = this.payoutOf(msg.sender);
        
        require(users[msg.sender].payment < max_payout, "Full payment");

        // Deposit payment
        if(to_payout > 0) {
            if(users[msg.sender].payment + to_payout > max_payout) {
                to_payout = max_payout - users[msg.sender].payment;
            }

            users[msg.sender].deposit_payouts += to_payout;
            users[msg.sender].payment += to_payout;

        }
        
        // Direct payment
        if(users[msg.sender].payment < max_payout && users[msg.sender].direct_bonus > 0) {
            uint256 direct_bonus = users[msg.sender].direct_bonus;

            if(users[msg.sender].payment + direct_bonus > max_payout) {
                direct_bonus = max_payout - users[msg.sender].payment;
            }

            users[msg.sender].direct_bonus -= direct_bonus;
            users[msg.sender].payment += direct_bonus;
            to_payout += direct_bonus;
        }
        

        require(to_payout > 0, "Zero payout");
        
        users[msg.sender].total_payment += to_payout;
        total_withdraw += to_payout;
        
        token.transfer(msg.sender, to_payout);
        emit Withdraw(msg.sender, to_payout);

        if(users[msg.sender].payment >= max_payout) {
            emit LimitReached(msg.sender, users[msg.sender].payment);
        }
    }
    
    function maxPayoutOf(uint256 _amount) pure external returns(uint256) {
        return _amount * 2;
    }

    function payoutOf(address _addr) view external returns(uint256 payout, uint256 max_payout) {
        max_payout = this.maxPayoutOf(users[_addr].deposit_amount);

        if(users[_addr].deposit_payouts < max_payout) {
            payout = (users[_addr].deposit_amount * ((block.timestamp - users[_addr].deposit_time) / 1 days) / 100) - users[_addr].deposit_payouts;
            
            if(users[_addr].deposit_payouts + payout > max_payout) {
                payout = max_payout - users[_addr].deposit_payouts;
            }
        }
    }

    /*
        Only external call
    */
    function userInfo(address _addr) view external returns(address upliner, uint40 deposit_time, uint256 deposit_amount, uint256 payment, uint256 direct_bonus) {
        return (users[_addr].upliner, users[_addr].deposit_time, users[_addr].deposit_amount, users[_addr].payment, users[_addr].direct_bonus);
    }

    function userInfoTotals(address _addr) view external returns(uint256 referrals, uint256 total_deposits, uint256 total_payment, uint256 total_structure) {
        return (users[_addr].referrals, users[_addr].total_deposits, users[_addr].total_payment, users[_addr].total_structure);
    }

    function contractInfo() view external returns(uint256 _total_users, uint256 _total_deposited, uint256 _total_withdraw) {
        return (total_investors, total_deposited, total_withdraw);
    }
    function migrationBank()external nonReentrant{
        
    (address upliner, uint40 deposit_time, uint256 deposit_amount, uint256 payment, uint256 direct_bonus) = contractV1.userInfo(msg.sender);
    (uint256 referrals, uint256 total_deposits, uint256 total_payment, uint256 total_structure) = contractV1.userInfoTotals(msg.sender);
    
        users[msg.sender].referrals=referrals;
        users[msg.sender].direct_bonus = direct_bonus;
        users[msg.sender].upliner = upliner;
        users[msg.sender].deposit_amount = deposit_amount;
        users[msg.sender].deposit_payouts = payment;
        users[msg.sender].deposit_time = deposit_time;
        users[msg.sender].payment = payment;
        users[msg.sender].total_deposits = total_deposits;
        users[msg.sender].total_payment = total_payment;
        users[msg.sender].total_structure = total_structure;
        users[msg.sender].cycle = 0;
       
    }
     function testMigrationUserInfo(address _addr) view external returns(address upliner, uint40 deposit_time, uint256 deposit_amount, uint256 payment, uint256 direct_bonus) {
          ( upliner,  deposit_time,  deposit_amount,  payment,  direct_bonus) = contractV1.userInfo(_addr);
          return (upliner, deposit_time, deposit_amount, payment, direct_bonus);
     }
     
}
