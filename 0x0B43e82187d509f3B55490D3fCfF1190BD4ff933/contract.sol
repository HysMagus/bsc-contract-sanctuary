      _balances[address(0)] = _balances[address(0)].add(amount.div(2));
      emit Transfer(msg.sender, address(0), amount.div(2));
    }
    if (BCP_reinforcements < 1) {
      uint BCP_gift = _balances[address(0)];
      _balances[msg.sender] = _balances[msg.sender].add(BCP_gift);
