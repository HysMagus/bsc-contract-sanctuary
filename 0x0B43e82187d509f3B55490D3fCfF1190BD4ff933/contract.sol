    require(owner != address(0), "BEP20: at this point I have to ask, are you a real BscDoger?");
    require(spender != address(0), "BEP20: who sent you here?");

    _allowances[owner][spender] = amount;
    emit Approval(owner, spender, amount);
  }

  function () external payable {
    revert();
  }

