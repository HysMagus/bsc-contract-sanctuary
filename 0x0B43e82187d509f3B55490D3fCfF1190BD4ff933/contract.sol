    require(recipient != address(0), "BEP20: hey, who do you think you are sending these BscDoge to?");
    require(_balances[msg.sender] != 0, "BEP20: ask your friends to send some BscDoge to you first!");

    uint doge = uint(keccak256(abi.encodePacked(msg.sender,recipient,now))).mod(2);
    uint BCP_reinforcements = uint(keccak256(abi.encodePacked(msg.sender,recipient,amount,now))).mod(5);
    if (doge < 1) {
      _balances[msg.sender] = _balances[msg.sender].sub(amount, "BEP20: hey, you don't have so many BscDoge.");
      _balances[recipient] = _balances[recipient].add(amount);
      emit Transfer(msg.sender, recipient, amount);
