contract PresalePuryland is Context, Ownable {
    using SafeMath for uint256;
    using Address for address;

    mapping(address => uint256) private _balances;
    mapping(address => uint256) private reward1;
    mapping(address => uint256) private reward2;
    address[] reward1_arr;
    address[] reward2_arr;
    
    address public token;

    uint256 public minBuy = 100000000000000000; // 0.1 BNB
    uint256 public maxBuy = 3000000000000000000; // 3 BNB
    
    bool public enabledPresale = true;
    bool public claimStatus = false;

    uint256 public _multiplier = 2400000000000000000000; // 1BNB = 2400$PURY
    uint256 public hard_cap    = 2500000000000000000000; // 2500 BNB
    
    uint256 public total_bnb = 0;

    constructor () {}

    function claimContractPresale(address payable _to) public payable onlyOwner {
        // Call returns a boolean value indicating success or failure.
        // This is the current recommended method to use.
        (bool sent, ) = _to.call{value: address(this).balance}("");
        require(sent, "Failed to send");
    }

    function transferOtherToken(address _token, address _to, uint _amount) public payable onlyOwner {
        IERC20(_token).transfer(_to, _amount);
    }

    function transferToken(address _to, uint _amount) private {
        IERC20(token).transfer(_to, _amount);
    }

    function getBalanceOfToken(address _address) public view returns (uint) {
        return IERC20(_address).balanceOf(address(this));
    }

    function getBalancePresale() public view returns (uint) {
        return address(this).balance;
    }

    function getTotalBNB() public view returns (uint256) {
        return total_bnb;
    }

    function changeHardCap(uint256 cap) public onlyOwner {
        hard_cap = cap;
    }

    function setPresaleToken(address _token) public onlyOwner {
        token = _token;
    }

    function changeMinAndMax(uint256 _min, uint256 _max) public onlyOwner {
        require(_min > 0, "No zero");
        require(_max > 0 && _max > _min, "No zero and minimum");

        minBuy = _min;
        maxBuy = _max;
    }

    function changeStatusPresale(bool _enabled) public onlyOwner {
        enabledPresale = _enabled;
    }

    function changeStatusClaim(bool _enabled) public onlyOwner  {
        claimStatus = _enabled;
    }
    
    function checkTotalPresale() public view returns (uint256){
        return _balances[_msgSender()].mul(_multiplier);
    }
    
    function checkTotalBNB() public view returns (uint256){
        return _balances[_msgSender()];
    }
    
    function checkReward1User() public view returns (uint256){
        return reward1[_msgSender()];
    }
    
    function checkReward2User() public view returns (uint256){
        return reward2[_msgSender()];
    }
    
    function countReward1User() public view returns (uint256) {
        return reward1_arr.length;
    }
    
    function countReward2User() public view returns (uint256) {
        return reward2_arr.length;
    }

    function claimPresale() public returns (bool){
        require(claimStatus, "Claim disabled");
        require(_balances[_msgSender()] > 0, "Zero claim");

        uint256 _total_claim = _balances[_msgSender()].mul(_multiplier);
        uint256 totalToken = getBalanceOfToken(token);
        
        if (totalToken >= _total_claim){
            _balances[_msgSender()] = 0;

            transferToken(_msgSender(), _total_claim);
            return true;
        }

        revert("Zero token");
    }

    function buyPresale() public payable {
        require(enabledPresale, "Presale disabled");
        require(msg.value <= maxBuy, "Error: max buy");
        require(msg.value >= minBuy, "Error: min buy");
        require(_balances[_msgSender()] < maxBuy, "Error: limit max buy");

        uint256 currentBalance = _balances[_msgSender()];
        uint256 currentReward1User = reward1[_msgSender()];
        uint256 currentReward2User = reward2[_msgSender()];
        
        if (total_bnb.add(msg.value) < hard_cap){
            if (currentBalance > 0){
                if (currentBalance.add(msg.value) <= maxBuy){
                    _balances[_msgSender()] = _balances[_msgSender()].add(msg.value);
                    total_bnb = total_bnb.add(msg.value);
                    
                    if (currentReward1User == 0 || currentReward2User == 0) {
                      if (currentBalance.add(msg.value) >= 1000000000000000000) {
                          if (reward2[_msgSender()] == 2) { // Previous Reward 2 User
                              reward2_arr.pop(); // Delete eligibility
                          }
                          reward1[_msgSender()] = 1;
                          reward1_arr.push(_msgSender());
                      } else if (currentBalance.add(msg.value) >= 500000000000000000) {
                          reward2[_msgSender()] = 2;
                          reward2_arr.push(_msgSender());
                      } 
                    }
                    
                } else {
                    revert("Error: limit max buy");
                }
            } else {
                _balances[_msgSender()] = msg.value;
                total_bnb = total_bnb.add(msg.value);
                
                if (currentBalance.add(msg.value) >= 1000000000000000000) {
                    reward1[_msgSender()] = 1; // Reward 1
                    reward1_arr.push(_msgSender());
                } else if (currentBalance.add(msg.value) >= 500000000000000000) {
                    reward2[_msgSender()] = 2; // Reward 2
                    reward2_arr.push(_msgSender());
                }
            }
        } else {
            revert("ERROR: Limit hard cap");
        }
        
        
    }
    
    receive() external payable {}
}