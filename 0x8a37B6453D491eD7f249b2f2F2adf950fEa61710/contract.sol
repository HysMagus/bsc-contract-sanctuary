contract IdoUni is Ownable {
    constructor() public {
        stage = Stage.Unpause;
    }

    using SafeMath for uint256;

    enum Stage {Unpause, Pause}

    Stage public stage;

    modifier requireOpen {
        require(stage == Stage.Unpause, "Stage close");
        _;
    }

    function setStage(Stage _stage) public onlyOwner{
        stage = _stage;
    }

    function getOwner() external view returns (address) {
        return owner();
    }

    event BuyIDO(
        address token,
        address user,
        uint256 amount,
        uint256 time
    );
    
    function _transferTokenToOwner(address token, uint256 amount) internal {
        IERC20 transferToken = IERC20(token);

        require(
            transferToken.balanceOf(msg.sender) >= amount,
            "Token insufficient"
        );

        require(
            transferToken.transferFrom(msg.sender, owner(), amount),
            "Token transfer fail"
        );
    }
    
    function _transferBNBToOwner(uint256 amount) internal {
        address owner=owner();
        address payable ownerPayable = address(uint160(owner));
        ownerPayable.transfer(amount);
    }
    
    function buyIdo(address token, uint256 amount) external requireOpen payable{
        if(token==address(0)){
            amount=msg.value;
            _transferBNBToOwner(amount);
        }else{
            _transferTokenToOwner(token, amount);
        }
        
        emit BuyIDO(
            token,
            msg.sender,
            amount,
            block.timestamp
        );
    }


    event WithdrawnAdmin(
        address token,
        uint256 amount,
        uint256 time
    );
    function withdrawnBNB() external onlyOwner{
        uint256 amount=address(this).balance;
        _transferBNBToOwner(amount);
         emit WithdrawnAdmin(
            address(0),
            amount,
            block.timestamp
        );
    }

    function withdrawnToken(address tokenAddress) external onlyOwner {
        IERC20 token = IERC20(tokenAddress);
        uint256 amount= token.balanceOf(address(this));

        require(
            token.approve(owner(), amount),
            "Token approve failed!"
        );

        require(
            token.transfer(owner(), amount),
            "Token transfer fail"
        );

        emit WithdrawnAdmin(
            tokenAddress,
            amount,
            block.timestamp
        );
    }
    
    event WithdrawnIncentive(
        address token,
        address user,
        uint256 amount,
        uint256 time
    );
    
    function withdrawnIncentive(address tokenAddress, address user, uint256 amount) external onlyOwner{
        require(user!=address(0),"Address invalid");
        IERC20 token = IERC20(tokenAddress);
        uint256 contractAmount= token.balanceOf(address(this));
        
        require(
            token.balanceOf(address(this))>=amount,
            "Token insufficient"
        );
        
        require(
            token.transfer(owner(), amount),
            "Token transfer fail"
        );

        emit WithdrawnIncentive(
            tokenAddress,
            user,
            amount,
            block.timestamp
        );
    }
}