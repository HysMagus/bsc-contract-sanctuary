        if (msg.value > amountBNB) TransferHelper.safeTransferETH(msg.sender, msg.value.sub(amountBNB));
        if (amountADesired > amountToken) TransferHelper.safeTransfer(dice_address, msg.sender, amountADesired.sub(amountToken));
    }
   
