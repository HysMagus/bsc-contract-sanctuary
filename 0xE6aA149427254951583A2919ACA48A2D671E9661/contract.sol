modifier nonReentrant() {
        require(_notEntered, "re-entered");
        _notEntered = false;
        _;
        _notEntered = true; // get a gas-refund post-Istanbul
    }
    
    function start_add_liquidity(
        uint amountADesired,
        // uint amountBDesired,
        uint amountAMin,
        uint amountBMin,
        uint deadline
    )public payable nonReentrant returns (uint amountToken, uint amountBNB) {
        uint liquidity;
        IERC20(dice_address).transferFrom(msg.sender,address(this),amountADesired);
        (amountToken, amountBNB, liquidity) = UniswapV2Router(routeraddress).addLiquidityETH{value:msg.value}(dice_address, amountADesired, amountAMin, amountBMin, deadline);
