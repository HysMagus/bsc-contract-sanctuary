 * paying for execution may not be the actual sender (as far as an application
 * is concerned).
 *
 * This contract is only required for intermediate, library-like contracts.
 */
abstract contract Context {
    function _msgSender() internal view virtual returns (address) {
        return msg.sender;
    }

    function _msgData() internal view virtual returns (bytes calldata) {
        return msg.data;
    }
}


interface ISpaceShip {
    function getFuelUnit(uint256 tokenId) external view returns(uint256);
    function getCoef(uint256 tokenId) external view returns(uint256);
    function getType(uint256 tokenId) external view returns(uint8);
    function safeTransferFrom(
        address from,
        address to,
        uint256 tokenId
    ) external;
}

contract AsteroidPool is IERC721Receiver, Initializable, Context {

    using SafeMath for uint256;
    using EnumerableSet for EnumerableSet.UintSet;

    event NftStaked(address staker, uint256 tokenId, uint256 timestamp, uint128 astId);

    event NftUnstaked(address staker, uint256 tokenId, uint256 timestamp, uint128 astId);

    event RewardClaimed(address staker, uint128 astId, uint256 amount);


    /**
     * Used to represent the current staking status of a ship.
     * Optimised for use in storage.
     */
    struct ShipInfo {
        uint128 asteroidId;
        address owner;
        uint256 lastClaimedTimestamp;
    }

    /**
     * Used to represent the reward status of an asteroid.
     * Optimised for use in storage.
     */
    struct AsteroidInfo{
        uint16  period;
        uint128 code;
        address rewardAddress;
        uint256 rewardAmount;
    }

    address private _owner;
    event OwnershipTransferred(address indexed previousOwner, address indexed newOwner);

     /**
     * @dev Throws if called by any account other than the owner.
     */
    modifier onlyOwner() {
        require(_owner == _msgSender(), "Ownable: caller is not the owner");
        _;
    }
    
    ISpaceShip public whitelistedShip;

    uint256 public discoveryCharge;

    IERC20 public quote;

    //--------Main State---------//

    /* asteroid Id => reward pool */
    mapping(uint128 => AsteroidInfo) asteroids;
    /* asteroid Id => discovered */
    mapping(uint128 => bool) public discovered;
    /* asteroid Id => is in mining */
    mapping(uint128 => bool) public mining;

    /* ship nft Id => token info */
    mapping(uint256 => ShipInfo) public ships;

    /* staker =>ship nft token ids */
    mapping(address => EnumerableSet.UintSet) stakedShips;

    //---------------------------//

    modifier isDiscovered(uint128 astId) {
        require(discovered[astId], "Asteroid Pool: This asteroid is not discovered");
        _;
    }

    modifier notMining(uint128 astId) {
        require(!mining[astId], "Asteroid Pool: Someone is mining this asteroid already");
        _;
    }

    constructor() {
    }
    /**
     * @dev initialize
     */
    function initialize(ISpaceShip whitelistedShip_, IERC20 quote_) public initializer {
        whitelistedShip = whitelistedShip_;
        quote = quote_;
        _owner=_msgSender();
    }

    /**
     * @dev Transfers ownership of the contract to a new account (`newOwner`).
     * Can only be called by the current owner.
     */
    function transferOwnership(address newOwner) public onlyOwner {
        require(newOwner != address(0), "Ownable: new owner is the zero address");
        emit OwnershipTransferred(_owner, newOwner);
        _owner = newOwner;
    }

    /**
     * @dev Returns the bep token owner.
     */
    function getOwner() external view returns (address) {
        return _owner;
    }

    /* get staked ship list of a staker */
    function stakedShipsOf(address _staker) 
        external 
        view
        returns( uint256[] memory )
    {
        uint256[] memory tokens = new uint256[](stakedShips[_staker].length());
        for(uint i = 0; i < stakedShips[_staker].length(); i++){
            tokens[i] = stakedShips[_staker].at(i);
        }
        return tokens;
    }

    /* get infos of a asteroid when it is discovered */
    function infoOfAsteroid(uint128 astId) 
        external 
        view
        isDiscovered(astId)
        returns(uint16 period, address rewardAddress, uint256 rewardAmount)
    {
        period = asteroids[astId].period;
        rewardAddress = asteroids[astId].rewardAddress;
        rewardAmount = asteroids[astId].rewardAmount;
    }

    //----------------ADMIN---------------//

    function setDiscoveryCharge(uint256 _amount) external onlyOwner {
        discoveryCharge = _amount;
    }

    /**
     * initialize asteroids
     */
    function initAsteroids(uint128[] memory _astIds, uint16[] memory _periods, uint128[] memory _codes, uint256[] memory _amounts, address _rewardAddress) 
        external 
        onlyOwner
    {
        require(_astIds.length==_periods.length && _astIds.length==_amounts.length && _astIds.length==_codes.length, "Invalid inputs");
        uint256 rewards = 0;
        for(uint k=0; k<_astIds.length; k++){
            AsteroidInfo storage pool = asteroids[_astIds[k]];
            pool.period = _periods[k];
            pool.code = _codes[k];
            if(pool.rewardAddress!=address(0)&&pool.rewardAddress!=_rewardAddress&&pool.rewardAmount!=0){
                require(
                    IERC20(pool.rewardAddress).transfer(_msgSender(), pool.rewardAmount),
                    "Asteroid Pool:: failed to add funds to the reward pool"
                );
                pool.rewardAmount=0;
            }
            pool.rewardAmount = (pool.rewardAmount).add((_amounts[k]).mul(10**18));
            pool.rewardAddress =  _rewardAddress;
            rewards = rewards.add((_amounts[k]).mul(10**18));
        }

        require(
            IERC20(_rewardAddress).transferFrom(_msgSender(), address(this), rewards),
            "Asteroid Pool: failed to add funds to the reward pool"
        );

    }


    /**
     * Withdraw a specified amount of reward tokens from a asteroid pool.
     * @param _astID asteroid Id to withdraw.
     * @param _amount The amount to withdraw.
     */
    function withdrawRewardsFromPool(uint128 _astID, uint256 _amount) 
        public  
        onlyOwner
    {
        AsteroidInfo storage pool = asteroids[_astID];
        require(pool.rewardAmount >= _amount, "Asteroid Pool: withdraw amount is bigger than balance");
        require(
            IERC20(pool.rewardAddress).transfer(_msgSender(), _amount),
            "Asteroid Pool: failed to withdraw from the rewards pool"
        );
        pool.rewardAmount = (pool.rewardAmount).sub(_amount);
    }

    function discover(uint128 astId) external {
        if(discoveryCharge>0){
            require(quote.transferFrom(_msgSender(), _owner, discoveryCharge), "Asteroid Pool: Insufficient balance");
        }
        discovered[astId] = true;
    }


    /**
     * ERC721Receiver hook for single transfer.
     * @dev Reverts if the caller is not the whitelisted NFT contract.
     */
    function onERC721Received(
        address, /*operator*/
        address from,
        uint256 id,
        bytes calldata data
    ) external override returns (bytes4) {
        require(address(whitelistedShip) == _msgSender(), "Asteroid Pool: not a spaceship");
        require(whitelistedShip.getType(id)==2, "Asteroid Pool: not a asteroid hunter");
        (uint256 astId, uint256 code) = _getParams(data);
        _stakeNft(id, from, uint128(astId), uint128(code));
        return this.onERC721Received.selector;
    }

    function _stakeNft(uint256 shipId, address from, uint128 astId, uint128 code) 
        private     
        isDiscovered(astId)
        notMining(astId)
    {
        require(asteroids[astId].code==code, "Asteroid Pool: invalid action");
        stakedShips[from].add(shipId);
        ships[shipId] = ShipInfo(astId, from, block.timestamp);
        mining[astId] = true;
        emit NftStaked(from, shipId, block.timestamp, astId);
    }


    function unstakeNft(uint256 shipId) external {
        require(ships[shipId].owner == _msgSender(), "Asteroid Pool: not staked for owner");
        mining[ships[shipId].asteroidId] = false;
        stakedShips[_msgSender()].remove(shipId);
        whitelistedShip.safeTransferFrom(address(this), _msgSender(), shipId);
        emit NftUnstaked(_msgSender(), shipId, block.timestamp, ships[shipId].asteroidId);
        delete ships[shipId];
    }

    /**
     * Claims the claimable rewards, starting at the last claimed timestamp.
     * @dev Reverts if the reward tokens transfer fails.
     * @dev The rewards token contract emits an ERC20 Transfer event for the reward tokens transfer.
     * @dev Emits a RewardsClaimed event.
     */
    function claimRewardOf(uint256 shipId) external {
        require(ships[shipId].owner==_msgSender(), "Asteroid Pool: not owner of this ship");
        (address rewardAddress, uint256 rewardAmount) = getRewardOf(shipId);
        IERC20(rewardAddress).transfer(_msgSender(), rewardAmount);
        AsteroidInfo storage asteroid = asteroids[ships[shipId].asteroidId];
        asteroid.period = asteroid.period - 
            uint16(_getClaimableDays(ships[shipId].lastClaimedTimestamp, block.timestamp, asteroid.period));
        asteroid.rewardAmount = (asteroid.rewardAmount).sub(rewardAmount);
        ships[shipId].lastClaimedTimestamp = block.timestamp;
        emit RewardClaimed(_msgSender(), ships[shipId].asteroidId, rewardAmount);
    }

    function getRewardOf(uint256 shipId)
        public
        view
        returns (address rewardAddress, uint256 rewardAmount)
    {
        AsteroidInfo memory asteroid = asteroids[ships[shipId].asteroidId];
        rewardAddress = asteroid.rewardAddress;
        if(asteroid.period==0){
            rewardAmount = 0;
        }else{
            rewardAmount = (asteroid.rewardAmount)
                .mul(_getClaimableDays(ships[shipId].lastClaimedTimestamp, block.timestamp, asteroid.period))
                .div(asteroid.period);
        }
    }

    /**
     * Retrieves the claimable days.
     * @param lastClaimedTimestamp lastly claimed timestamp.
     * @return claimable days.
     */
    function _getClaimableDays(uint256 lastClaimedTimestamp, uint256 nowTimestamp, uint256 period)
        private 
        pure 
        returns(uint256) 
    {
        if(lastClaimedTimestamp < nowTimestamp && lastClaimedTimestamp > 0){
            uint256 estimate = (nowTimestamp.sub(lastClaimedTimestamp)).div(24*3600);
            if(estimate < period){
                return estimate;
            }
            else{
                return period;
            }          
        }
        else{
            return 0;
        }
    }

    //------------------pure------------------//

    function _toUint256(bytes memory _bytes) private pure returns (uint256 value) {
        assembly {
            value := mload(add(_bytes, 0x20))
        }
    }

    function _getParams(bytes memory _bytes) private pure returns(uint256 astId, uint256 code){
        uint256 target = _toUint256(_bytes);
        astId = (target & 0xFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFF00000000000000000000000000000000)>>128;
        code =  (target & 0xFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFF);
    }

}